    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
            "name": "Docker: Attach to Backend",
            "type": "node",
            "request": "attach",
            "restart": true,
            "remoteRoot": "/app",
            "port": 9229,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}/service",
            //"preLaunchTask": "docker-compose-up"
          },
          {
            "name": "Docker: Attach to Frontend",
            "type": "node",
            "request": "attach",
            "restart": true,
            "remoteRoot": "/app",
            "port": 9230,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "docker-compose-up"
          },
          {
            "name": "Launch Program",
            "command": "npm run dev",
            "preLaunchTask": "clean",
            "request": "launch",
            "type": "node-terminal"
          }
    ]
}