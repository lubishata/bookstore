{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ES6",
    "jsx": "react-jsx",
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noEmit":false,
    "lib": [
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/main.tsx"
  ]
}